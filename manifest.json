{
  "manifest_version": 2,
  "name": "AI Page Assistant",
  "version": "1.0.0",
  "description": "Ask an AI about selected text or the full page using OpenAI- or Anthropic-compatible APIs.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "AI Page Assistant"
  },
  "sidebar_action": {
    "default_title": "AI Page Assistant",
    "default_panel": "sidebar.html",
    "default_icon": {
      "32": "icons/sidebar.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-page-assistant@example.com",
      "strict_min_version": "109.0"
    }
  }
}
